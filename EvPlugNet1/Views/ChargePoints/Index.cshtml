@model IEnumerable<EvPlugNet1.Models.ChargePoint>

@{
    ViewData["Title"] = "Index";
}
<script>
    $(document).ready(function () {
        $('#cpTable').DataTable();
    });
</script>



<div style="padding:25px;">

    <h4>ChargePoints</h4>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table id="cpTable" class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClientCertThumb)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClientCertThumb)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ChargePointId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ChargePointId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ChargePointId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>