@model IEnumerable<EvPlugNet1.Models.ConnectorStatus>

@{
    ViewData["Title"] = "Index";
}

<script>
    $(document).ready(function () {
        $('#conTable').DataTable();
    });
</script>

<style>

    thead {
        padding: 7px;
    }

    table {
        font-size: .7em;
        border: 1px solid #dddddd;
    }

</style>

<div style="padding:25px;">

    <h3>Charger Status</h3>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <table id="conTable" class="table table-striped">
