                    @Html.DisplayNameFor(model => model.ConnectorId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConnectorName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastStatusTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastMeter)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastMeterTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChargePointId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConnectorId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConnectorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastStatus)
